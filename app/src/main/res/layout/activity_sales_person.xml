<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#399"
    android:orientation="vertical"
    tools:context=".SalesPersonActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:ems="10"
                    android:text="Number :"
                    android:textAlignment="textEnd"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtSpNumber"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:ems="10"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:ems="10"
                    android:text="Name :"
                    android:textAlignment="textEnd"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtSpName"
                    android:layout_width="323dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:ems="10"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgviewSalesPerson"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_camera" />
    </LinearLayout>




    <EditText
        android:id="@+id/editSpMonth"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:background="#fff"
        android:ems="10"
        android:hint="Month"
        android:inputType="number" />

    <EditText
        android:id="@+id/editSpYear"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Year"
        android:inputType="number" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registration Date  :"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtSpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editSpSouthern"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Southern Region"
        android:inputType="number" />

    <EditText
        android:id="@+id/editSpCoastal"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Coastal Region"
        android:inputType="number" />

    <EditText
        android:id="@+id/editSpNorthern"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Northern Region"
        android:inputType="number" />

    <EditText
        android:id="@+id/editSpEastern"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Eastern Region"
        android:inputType="number" />


    <EditText
        android:id="@+id/editSpLebanon"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:ems="10"
        android:hint="Lebanon"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddSales"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:background="@android:color/holo_orange_dark"
        android:text="Add Sales" />


</LinearLayout>